{
  "name": "sovereign",
  "version": "0.1.0",
  "description": "A procedural geopolitical simulation",
  "main": "dist-electron/main.js",
  "author": "CodeByBryant",
  "license": "MIT",
  "homepage": "https://codebybryant.github.io/Sovereign/",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeByBryant/Sovereign.git"
  },
  "bugs": {
    "url": "https://github.com/CodeByBryant/Sovereign/issues"
  },
  "keywords": [
    "evolution",
    "neural-network",
    "genetic-algorithm",
    "simulation",
    "artificial-intelligence",
    "machine-learning",
    "electron",
    "react",
    "typescript",
    "evolutionary-computing",
    "natural-selection",
    "agent-based-simulation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "lint": "eslint src electron --ext .ts,.tsx",
    "lint:fix": "eslint src electron --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\" \"electron/**/*.ts\"",
    "test": "vitest",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "dev:web": "vite",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "package": "electron-builder"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "color": "^5.0.3",
    "alea": "^1.0.1",
    "electron": "^28.0.0",
    "electron-updater": "^6.1.7",
    "fast-deep-equal": "^3.1.3",
    "mnemonist": "^0.39.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simplex-noise": "^4.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@testing-library/react": "^14.1.2",
    "@types/color": "^3.0.6",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "build": {
    "appId": "com.codebybryant.sovereign",
    "productName": "Sovereign",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.simulation-games",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
